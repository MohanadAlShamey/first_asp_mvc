@model IEnumerable<first_asp_mvc.Models.CategoryApplication>

@{
    ViewData["Title"] = "Index";
    IEnumerable<CategoryApplication> categories = ViewData["categories"] as IEnumerable<CategoryApplication>;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Img
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in categories) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Img
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
