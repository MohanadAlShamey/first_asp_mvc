@model first_asp_mvc.Models.CategoryApplication

@{
    ViewData["Title"] = "Details";
    CategoryApplication category = ViewData["category"] as CategoryApplication;
}

<h1>Details</h1>

<div>
    <h4>CategoryApplication</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Name
        </dt>
        <dd class = "col-sm-10">
         @category.Name
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
           @category.Description
        </dd>
        <dt class = "col-sm-2">
            Img
        </dt>
        <dd class = "col-sm-10">
            @category.Img
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@category?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
